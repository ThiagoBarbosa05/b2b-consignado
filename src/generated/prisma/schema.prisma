generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wines {
  id        String      @id @default(uuid())
  name      String
  country   String?
  region    String?
  price     Int
  type      WineType    @relation(fields: [typeId], references: [id])
  typeId    String      @map("type_id")
  WineCount WineCount[]

  @@map("wines")
}

model WineType {
  id    String  @id @default(uuid())
  name  String
  wines Wines[]

  @@map("wine_type")
}

model WineCount {
  id      String @id @default(uuid())
  balance Int
  count   Int?
  invoice Int?
  wineId  String @map("wine_id")
  wine    Wines  @relation(fields: [wineId], references: [id])

  @@map("wine_count")
}
